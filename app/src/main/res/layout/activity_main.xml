<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Insertar datos"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <EditText
                android:id="@+id/txtID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nombre (s)"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtApellido"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtFNacimiento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Correo"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtNSS"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Numero de seguro social"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtContactoEmergencia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Contacto de Emergencia"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtEnfermedadesCron"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enfermedades Cronicas"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtEscolaridad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Escolaridad"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtNacionalidad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nacionalidad"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtDireccion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Direccion"/>

            <EditText
                android:id="@+id/txtArea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Area"/>

            <EditText
                android:id="@+id/txtPuesto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Puesto"/>

            <EditText
                android:id="@+id/txtEstadoCivil"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Estado Civil"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickGuardar"
                android:text="Guardar" />

            <Button
                android:id="@+id/btnCargar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickCargar"
                android:text="Cargar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>